{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:app --worker-class gthread --threads 4 --bind 0.0.0.0:$PORT",
        "restartPolicyType": "ON_FAILURE",
        "healthCheckPath": "/",
        "healthCheckTimeout": 100
    }
}